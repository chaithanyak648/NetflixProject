<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Mainscreens.Mainscreen">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/Theme.AppCompat.Light.Dialog"
        tools:ignore="MissingConstraints">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorPrimary">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpagerswipescreen"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginTop="57dp"
                tools:ignore="MissingConstraints">


            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:id="@+id/sliderdots"
                android:layout_below="@id/viewpagerswipescreen"
                android:layout_width="259dp"
                android:layout_height="13dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="2dp"

                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

            </LinearLayout>

            <Button
                android:id="@+id/getstarted"
                android:layout_width="374dp"
                android:layout_height="62dp"
                android:layout_below="@id/sliderdots"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/activedots"
                android:gravity="center_horizontal"
                android:text="GET STARTED"

                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp">

            </Button>

            <ImageView
                android:id="@+id/netflixlogo"
                android:layout_width="103dp"
                android:layout_height="51dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_logo_netflix"></ImageView>

            <TextView
                android:id="@+id/privacytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_toEndOf="@+id/netflixlogo"
                android:text="PRIVACY"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/helptextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="212dp"
                android:layout_toEndOf="@+id/netflixlogo"
                android:text="HELP"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signintextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="258dp"
                android:layout_toEndOf="@+id/netflixlogo"
                android:text="SIGNIN"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>

    </merge>